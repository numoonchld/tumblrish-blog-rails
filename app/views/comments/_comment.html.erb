<div>
  <div>
    <p> <em> <%= comment.name%> </em> </p>
    <p> <%= comment.body%> </p>
    <p> <%= time_ago_in_words(comment.created_at) %> </p>
  </div>

  <p>
    <%= link_to 'Delete', 
        [comment.post, comment],
        method: :delete,
        data: { confirm: 'Are you sure?' }
      %>
  </p>

</div>